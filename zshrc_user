# Run the most recent
function docker_run_newest {
    docker run -i -t `docker image ls -q | head -n1` $@
}

alias java8='$HOME/jdk8u212-b03/Contents/Home/bin/java'
alias ghidra='$HOME/ghidra/ghidraRun'

