# This function can help improve performance of omz prompt in large git repos
function zsh_git_ignore_dirty {
    git config --add oh-my-zsh.hide-dirty 1
}

[[ -e ~/.phpbrew/bashrc ]] && source ~/.phpbrew/bashrc
